const express = require('express');
const app = express();
const port = 80;

app.get('/', (req, res) => {
    res.send(`
        <html>
            <head>
                <title>Hello</title>
            </head>
            <body>
                <center>
               <h1>Hello this is my first EC2 Instance task!</h1>
                <p>This page is hosted using Nodejs ,HTML and Linux commands.</p>
</center>
            </body>
        </html>
    `);
});

app.listen(port, '0.0.0.0', () => {
    console.log(`Example app listening at http://0.0.0.0:${port}`);
});
